<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.a19hour.tar.MainActivity">
    <EditText
        android:id="@+id/accesscode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:hint="@string/access_code"
        android:maxLines="1"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:singleLine="true" />
    <Button
        android:id="@+id/sign_in_class_button"
        style="?android:textAppearanceSmall"
        android:layout_below="@+id/accesscode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="@string/action_sign_in_class"
        android:textStyle="bold" />
    <!--<Button-->
    <!--android:id="@+id/sign_out_button"-->
    <!--style="?android:textAppearanceSmall"-->
    <!--android:layout_below="@+id/sign_in_class_button"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginTop="16dp"-->
    <!--android:text="@string/action_sign_out"-->
    <!--android:textStyle="bold" />-->
    <ProgressBar
        android:id="@+id/sign_in_class_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</RelativeLayout>
